<?php

/**
 * @file
 * Main module file for VIT Event Core.
 */

/**
 * Implements hook_mail().
 */
function vit_event_core_mail($key, &$message, $params) {
  $options = ['langcode' => $message['langcode']];

  switch ($key) {
    case 'registration_receipt':
      $message['from'] = \Drupal::config('system.site')->get('mail');
      $message['subject'] = t('Registration Confirmed: @event', ['@event' => $params['event_name']], $options);
      $message['body'][] = t('Hello @name,', ['@name' => $params['full_name']], $options);
      $message['body'][] = t('You have successfully registered for the following event:', [], $options);
      $message['body'][] = t('Event: @event', ['@event' => $params['event_name']], $options);
      $message['body'][] = t('Date: @date', ['@date' => $params['event_date']], $options);
      $message['body'][] = t('Category: @category', ['@category' => $params['category']], $options);
      break;
      
    case 'admin_notification':
      $message['from'] = \Drupal::config('system.site')->get('mail');
      $message['subject'] = t('New Registration: @event', ['@event' => $params['event_name']], $options);
      $message['body'][] = t('A new participant has registered.', [], $options);
      $message['body'][] = t('Name: @name', ['@name' => $params['full_name']], $options);
      $message['body'][] = t('Email: @email', ['@email' => $params['email']], $options);
      $message['body'][] = t('Event: @event', ['@event' => $params['event_name']], $options);
      $message['body'][] = t('Date: @date', ['@date' => $params['event_date']], $options);
      $message['body'][] = t('Category: @category', ['@category' => $params['category']], $options);
      break;
  }
}
